extends ../layout

block content
  div(role='main')
    .page.innerPage#eventPage(data-role="page")
      .topGrahic
      a.menuButton(href="/")
        img(src="/img/menu-button.png",alt="Duas Home")

      .padpage.padtop

        h1 
          a.back.ui-link(href='/',data-rel="back")
            img(src='/img/icon-back.png',alt='Back')
            | The month of #{month}

        p
          | &nbsp;!{info.description}

        if info.collection
          h4 
            a(href='/tag/' + info.collection) Supplications &amp; Ziyarats for #{month}
 
      .padpage
        h2
        span.h2 Events in #{month}

        .projects
          ul(data-role='listview')
            each event in events
              li
                a(href='/events/' + event.urlkey)
                  img(src='/cache/64x64/' + event.image, alt=event.name)
                  h3 #{event.name}
                  p #{datehelper(event.hijridate,event.hijrimonth)}

        h4
          if (next && prev) 
            a.next.ui-link(href=prev) 
              | Previous
              img(src="/img/icon-back.png")
            div.right
              a.next.ui-link(href=next)
                | Next
                img(src="/img/icon-next.png")

      include ../sharing
