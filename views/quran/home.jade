extends ../layout

block content
  div(role='main')
    .page.innerPage#quranIndex(data-role="page")
      .topGrahic
      a.menuButton(href="/")
        img(src="/img/menu-button.png",alt="Home")

      .padpage.padtop
        h1 
          a.back.ui-link(href='/')
            img(src='/img/icon-back.png',alt='Back')
            | The Holy Quran

        .clients
            ul(data-role='listview')
              li
                a(href='/quran/index')
                  img.ui-li-icon(src='/img/quran.png',width='16',height='16',alt='Chapters')
                  | Chapter Index
              li
                a(href='/qunoot/1')
                  img.ui-li-icon(src='/img/icon-dua.png',width='16',height='16',alt='Qunoot Prayers')
                  | Prayers from the Quran
              li
                a(href='/settings/quran')
                  img.ui-li-icon(src='/img/icon-lang.png',width='16',height='16',alt='Font and Translations')
                  | Settings

