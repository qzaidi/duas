extends ../layout

block content
  div(role='main')
    .page.innerPage#rights(data-role="page")
      .topGrahic
      a.menuButton(href="/")
        img(src="/img/menu-button.png",alt="Menu")

      .padpage.padtop

        h1 
          a.back.ui-link(href='/')
            img(src='/img/icon-back.png',alt='Back')
            | Al Quran (#{chapter}: #{verse})

        p.arabic 
          | #{ayah} 
          span.ayaNumber ﴿ #{digits(verse)} ﴾  

        h4
          if (next) 
            a.next.ui-link(href="#{next}") 
              | Next
              img(src="/img/icon-next.png")

      include ../sharing
