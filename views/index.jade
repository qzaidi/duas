extends layout

append htmlhead
  if (scripts.css)
    link(href='#{scripts.css}',rel='stylesheet',type='text/css')

block content
  div(role='main')
    #menuPage.page.iscroll(data-role='page', data-cache='never')
      .scroller
        .company
          .calendar
            span.month #{hijri.monthName}
            span.day #{hijri.day}
          img(src='/img/cover.jpg', alt='Sahifa-e-Sajjadiya')
        ul.menu
          li
            ul.section
              li.square
                a.box(href='/about', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-imam.png', alt='About')
                  span.text  About Imam
              li.square
                a.box(href='/munajat', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-prayer.png', alt='Munajat')
                  span.text  Whispered Prayers
              li.square
                a.box(href='/duas', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-dua.png', alt='About Us')
                  span.text  Supplications
          li
            ul.section
              li.square
                a.box(href='/teachings', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-tesbih.png', alt='Teachings')
                  span.text Pearls of Wisdom
              li.square
                a.box(href='/gallery', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-karbala.png', alt='Gallery')
                  span.text  Gallery 
              li.square
                a.box(href='/events', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-events.png', alt='Events')
                  span.text  Events 
          li
            ul.section
              li.square
                a.box(href='/ziyaraat', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-ziyaraat.jpg', alt='Ziyaraat')
                  span.text  Ziyaraat
              li.square
                a.box(href='/treatise', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-resaleh.png', alt='Treatise')
                  span.text Treatise on Rights
              li.square
                a.box(href='/videos', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-video.png', alt='videos')
                  span.text  Multimedia
          li
            ul.section
              li.square
                a.box(href='/settings', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-settings.png', alt='Settings')
                  span.text  Settings


    if (scripts.js)
      script(src="#{scripts.js}",defer="defer");

append footerblock
  script(src='/js/hijri.js')
  script(defer="defer")
    $('#menuPage').live('pageshow',function() {
      var d = hijri.getHijriDate();
      var keydates = hijri.keydates;
      if (link = (keydates[d.month + '-' + d.day] || keydates[d.month + '-' + (d.day + 1)] || keydates[d.month + '-' + (d.day + 2)])) {
        $('.calendar .day').html('<a href="/events/' + link + '">'+ d.day + '*</a>');
      } else {
        $('.calendar .day').text(d.day);
      }
      $('.calendar .month').text(d.monthName);
    });
