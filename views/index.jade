extends layout

append htmlhead
  if (scripts.css)
    link(href='#{scripts.css}',rel='stylesheet',type='text/css')

block content
  div(role='main')
    #menuPage.page.iscroll(data-role='page', data-cache='never')
      .scroller
        .company
          a(href='/month/')
            .calendar
              span.month #{hijri.monthName}
              span.day #{hijri.day}
          #coverVerse(style=verse.style) 
            if (verse.href)
              a(href=verse.href,alt=verse.attrib) !{verse.arabic} 
            else 
              div !{verse.arabic}
            span.right #{verse.attrib}
          a(href=verse.href)
            img(usemap="#imagemap",style="vertical-align:middle",src='/img/covers/#{verse.background}',alt='Sahifa-e-Sajjadiya')
            map(name="imagemap",id="imagemap")
              area(alt="Desktop Site",title="http://duas.org/",Href="http://duas.org/",shape="rect",coords="72,558,220,615",style="outline:none;")
        ul.menu
          li
            ul.section
              li.square
                a.box(href='/quran', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-quran.png', alt='videos')
                  span.text  Al-Quran
              li.square
                a.box(href='/munajat', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-munajat.png', alt='Munajat')
                  span.text  Whispered Prayers
              li.square
                a.box(href='/duas', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-dua.png', alt='Supplications')
                  span.text  Supplications
          li
            ul.section
              li.square
                a.box(href='/searchpage', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-search.png', alt='Search')
                  span.text  Start Here
              li.square
                a.box(href='/events', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-events.png', alt='Events')
                  span.text  #{hijri.monthName} 
              li.square
                a.box(href='/ziyarat', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-ziyarat.png', alt='Ziyaraat')
                  span.text  Ziyaraat
          li
            ul.section
              li.square
                a.box(href='/asmaulhusna', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-allah.png', alt='Asma-ul-Husna')
                  span.text Asma-ul-Husna
              li.square
                a.box(href='/prayertimes', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-praytimes.png', alt='Prayer Times')
                  span.text Prayer Times
              li.square
                a.box(href='/gallery', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-gallery.png', alt='Gallery')
                  span.text  Gallery 
          li
            ul.section
              li.square
                a.box(href='/teachings', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-tesbih.png', alt='Teachings')
                  span.text Pearls of Wisdom
              li.square
                a.box(href='/salat', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-munajat.png', alt='Salat')
                  span.text  Salat
              li.square
                a.box(href='/nahjulbalagha', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-nahj.png', alt='Nahjul Balagha')
                  span.text  Nahjul Balagha
          li
            ul.section
              li.square
                a.box(href='/sermon', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-sermon.png', alt='Sermons')
                  span.text Sermons
              li.square
                a.box(href='/treatise', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-rights.png', alt='Treatise of Rights')
                  span.text Treatise of Rights
              li.square
                a.box(href='/ahadith', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-ahlebait.png', alt='Tradtions from Ahle-bait')
                  span.text Ahadith
          li
            ul.section
              li.square
                a.box(href='/settings', data-transition='fade', data-direction='reverse')
                  img(src='/img/icon-settings.png', alt='Settings')
                  span.text  Settings
              li.square
                a.box(href='http://duas.org', data-transition='fade', data-direction='reverse')
                  img(src='/img/duas_logo.png', alt='Settings')
                  span.text  Desktop Site

    if (scripts.js)
      script(src="#{scripts.js}",defer="defer")
