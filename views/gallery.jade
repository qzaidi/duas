extends layout

block content
  div(role='main')
    .page.innerPage.padpage.padtop.padbottom#galleryPage(data-role="page")
      .topGrahic
      a.menuButton(href="/")
        img(src="/img/menu-button.png",alt="Menu")

      h1 Gallery

      .iscroll#galleryScroller(data-ajax='false')
        .scroller
          ul.menu
            each row in rows
              li
                ul.section
                  each image in row
                    li.square
                      a.box.gallery-item(href='/img/gallery/#{image.file}')
                        img(src='/img/gallery/#{image.file}',alt='#{image.name}')

