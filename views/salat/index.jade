extends ../layout

block content
  div(role='main')
    include ../layout/search

      .padpage.padtop
        h1 
          a.back.ui-link(href='#',data-rel='back')
            img(src='/img/icon-back.png',alt='Back')
            | Salat


        .clients
            ul(data-role='listview')
              li
                a(href='/salat/hilal')
                  img.ui-li-icon(src='/img/icon-munajat.png',width='16',height='16',alt='Salat Hilal')
                  | Salat Ruyat-e-Hilal
                  span.arabic.right(style='background: transparent;') صلاةالْهِلَالِ 
              li
                a(href='/salat/layl')
                  img.ui-li-icon(src='/img/icon-munajat.png',width='16',height='16',alt='Salat Tahajjud')
                  | Salat Layl (Tahajjud/Night Prayer)
                  span.arabic.right(style='background: transparent;') صلاةالليل
              li
                a(href='/salat/eid')
                  img.ui-li-icon(src='/img/icon-munajat.png',width='16',height='16',alt='Salat Eid')
                  | Salat Eid 
                  span.arabic.right(style='background: transparent;')صلاة عيد
              li
                a(href='/salat/prophet')
                  img.ui-li-icon(src='/img/icon-munajat.png',width='16',height='16',alt='Salat of Prophet')
                  | Salat of Holy Prophet
                  span.arabic.right(style='background: transparent;')  صلاة النبي صلى الله عليه وآله وسلم
              li
                a(href='/salat/jafartayyar')
                  img.ui-li-icon(src='/img/icon-munajat.png',width='16',height='16',alt='Salat Jafar at Tayyar')
                  | Salat Jafar at Tayyar
                  span.arabic.right(style='background: transparent;') صلاة جعفر الطيار
              li
                a(href='/salat/ghufayla')
                  img.ui-li-icon(src='/img/icon-munajat.png',width='16',height='16',alt='Salat Ghufayla')
                  | Salat Ghufayla
                  span.arabic.right(style='background: transparent;') صلاة
              li
                a(href='/salat/wahshat')
                  img.ui-li-icon(src='/img/icon-munajat.png',width='16',height='16',alt='Salat Wahshat')
                  | Salat Wahshat
                  span.arabic.right(style='background: transparent;') صلاة لیلة الدفن یا صلاة الهدیة یا نماز رفع وحشت 
